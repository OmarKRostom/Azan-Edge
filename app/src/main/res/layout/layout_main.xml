<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Fajr Tile -->
        <include
            layout="@layout/fajr_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/padding_between_tiles" />

        <TextView
            android:id="@+id/tv_fajr_prayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_between_tiles"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="04:35 AM" />

        <!-- Zuhr Tile -->
        <include
            layout="@layout/zuhr_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/padding_between_tiles" />

        <TextView
            android:id="@+id/tv_zuhr_prayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_between_tiles"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="12:14 PM" />

        <!-- Asr Tile -->
        <include
            layout="@layout/asr_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/padding_between_tiles" />

        <TextView
            android:id="@+id/tv_asr_prayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_between_tiles"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="03:45 PM" />

        <!-- Maghreb Tile -->
        <include
            layout="@layout/maghreb_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/padding_between_tiles" />

        <TextView
            android:id="@+id/tv_maghreb_prayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_between_tiles"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="05:17 PM" />

        <!-- Ishra Tile -->
        <include
            layout="@layout/isha_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/padding_between_tiles" />

        <TextView
            android:id="@+id/tv_isha_prayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="09:12 PM" />

    </LinearLayout>

</FrameLayout>